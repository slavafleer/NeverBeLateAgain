<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.donotbelateapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.StartActivity"
            android:label="@string/title_activity_start" >
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.ParseLoginActivity"
            android:label="@string/title_activity_parse_login" >
        </activity>
        <activity
            android:name=".ui.ParseSignUpActivity"
            android:label="@string/title_activity_parse_sign_up"
            android:parentActivityName=".ui.ParseLoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.donotbelateapp.ui.ParseLoginActivity" />
        </activity>
        <activity
            android:name=".ui.EditFriendsActivity"
            android:label="@string/title_activity_edit_friends"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.donotbelateapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.CreateMeetingActivity"
            android:label="@string/title_activity_create_meeting"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.donotbelateapp.ui.MainActivity" />
        </activity>
    </application>

</manifest>
